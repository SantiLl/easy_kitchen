<%= render 'shared/carousel' %>
<div class="container-fluid d-flex mt-3">
    <div class="col-lg-6">
      <h2 class="text-center">Our favorite kitchens</h2>
      <div class="cards">
        <% @kitchens.each do |kitchen| %>
           <%= render 'components/card', kitchen: kitchen %>
        <% end %>
      </div>
    </div>
    <div
    class = "col-lg-6"
    id="map"
    style="width: 100%;
    height: 100vh;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
</div>

