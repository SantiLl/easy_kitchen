<%= render 'shared/carousel' %>
<div class="container-fluid">
  <h2 class="mt-5 mb-3 text-center">Our favorite kitchens</h2>
  <div class="cards">
    <% @kitchens.each do |kitchen| %>
       <%= render 'components/card', kitchen: kitchen %>
    <% end %>
  </div>
</div>

<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
