<% kitchen.average_rating.to_i.times do %>
    <i class="fas fa-star"></i>
<% end %>
<% (kitchen.average_rating - kitchen.average_rating.to_i).to_i.times do %>
    <i class="fas fa-star-half-alt"></i>
<% end %>
<% (5 - kitchen.average_rating.ceil).times do %>
    <i class="far fa-star"></i>
<% end %>
