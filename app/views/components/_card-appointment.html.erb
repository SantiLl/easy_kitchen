

<%= link_to kitchen_path(@appointment.kitchen) do %>
<div class="card-kitchen">
  <%= cl_image_tag @appointment.kitchen.photo %>
  <div class="star-rating">
    <%= render 'shared/stars', kitchen: @appointment.kitchen %>
  </div>
  <div class="card-body">
    <div>
      <h5 class="card-title mb-1"><%= @appointment.kitchen.name %></h5>
      <p class="card-text overflow-ellipsis card-description"><i class="fas fa-calendar-day"></i> <%= @appointment.date %></p>
    </div>
    <div class="d-flex justify-content-between mt-3">
      <p class="card-text card-address"><i class="fas fa-map-marker-alt"></i> <%= @appointment.kitchen.address %></p>
      <p class="card-text card-price">$ <%= @appointment.kitchen.price %></p>


    </div>
  </div>
</div>
  <% end %>

