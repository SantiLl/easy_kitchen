<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "/", class: "navbar-brand" do %>
    <%= image_tag asset_path("easykitchen-logo.png") %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>

      <li class="nav-item ml-3 btn btn-light">
        <%= link_to 'Create kitchen', new_kitchen_path, class: 'nav-link'  %>
      </li>


     <!--  <li class="nav-item ml-3 btn btn-light"> -->
        <%#= link_to 'My appointments', appointment_path, class: 'nav-link'  %>
      <!-- </li> -->



      <li class="nav-item dropdown ml-4">
        <%= image_tag current_user.avatar, class: "avatar border border-dark dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          <%= link_to "Dashboard", dashboard_path, class: "dropdown-item" %>
        </div>
      </li>

      <% else %>
      <li class="nav-item btn btn-light">
        <%= link_to "Sign In", new_user_session_path, class: "nav-link" %>
      </li>
      <li class="nav-item ml-3 btn btn-light">
        <%= link_to "Sign Up", new_user_registration_path, class: "nav-link" %>
      </li>
      <% end %>

    </ul>
  </div>
</div>
